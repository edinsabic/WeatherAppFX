<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import java.net.URL?>
<?import javafx.scene.layout.HBox?>
<VBox fx:id="rootVBox" alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gh.project.weatherappfx.WeatherControllerFX">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Welcome to the Weather App! Please name a city:" />

    <HBox alignment="CENTER" spacing="10.0"> <!-- Added HBox to align input field and button -->
        <TextField fx:id="cityField" promptText="City Name" />
        <Button text="Search" onAction="#onSearchButtonClick"/>
    </HBox>

    <Label fx:id="weatherInfoLabel" styleClass="weather-info"/> <!-- Moved weather info below input field -->

    <Pane prefHeight="20.0"/> <!-- Pane to create some space (for chart) -->
    <VBox fx:id="vboxContainer"/> <!-- VBox for the chart (chart container) -->

    <stylesheets>
        <URL value="file:src/main/resources/gh/project/weatherappfx/styles.css" />
    </stylesheets>
</VBox>

